{
  "patient_demographics": {
    "version": "1.0",
    "fields": [
      {
        "Field": "Full Name",
        "Description": "Patient's full name",
        "ValueType": "Unique",
        "Example": "John Doe"
      },
      {
        "Field": "Date of Birth",
        "Description": "Birth date",
        "ValueType": "Date",
        "Example": "1985-06-15"
      },
      {
        "Field": "Gender",
        "Description": "Patient's gender",
        "ValueType": "Text",
        "Example": "Male"
      },
      {
        "Field": "Medical Coverage",
        "Description": "Health insurance/coverage details",
        "ValueType": "Text",
        "Example": "Assurance Maladie - CPAM"
      }
    ]
  },
  "medical_history": {
    "version": "1.0",
    "fields": [
      {
        "Field": "Past Medical Conditions",
        "Description": "Significant chronic or past conditions",
        "ValueType": "List",
        "Example": ["Hypertension", "Diabetes Type 2"]
      },
      {
        "Field": "Surgical History",
        "Description": "Past surgeries with dates",
        "ValueType": "List",
        "Example": [
          {"Surgery": "Appendectomy", "Date": "2012-07-01"}
        ]
      },
      {
        "Field": "Chronic Medications",
        "Description": "Ongoing treatments/medications",
        "ValueType": "List",
        "Example": [
          {"Medication": "Metformin", "Dosage": "500mg", "Frequency": "BID"}
        ]
      },
      {
        "Field": "Allergies",
        "Description": "Known allergies (medications, food, etc.)",
        "ValueType": "List",
        "Example": ["Penicillin", "Ibuprofen"]
      }
    ]
  },
  "lifestyle": {
    "version": "1.0",
    "fields": [
      {
        "Field": "Smoking Status",
        "Description": "Patient's smoking habits",
        "ValueType": "Boolean",
        "Example": "No"
      },
      {
        "Field": "Alcohol Consumption",
        "Description": "Alcohol use (Yes/No)",
        "ValueType": "Boolean",
        "Example": "Yes"
      },
      {
        "Field": "Substance Use",
        "Description": "Use of other substances (Yes/No)",
        "ValueType": "Boolean",
        "Example": "No"
      }
    ]
  },
  "vital_signs": {
    "version": "1.0",
    "fields": [
      {
        "Field": "Weight",
        "Description": "Latest weight (kg)",
        "ValueType": "Numeric (kg)",
        "Example": {"Date": "2024-02-01", "Value": 72}
      },
      {
        "Field": "Height",
        "Description": "Latest height (cm)",
        "ValueType": "Numeric (cm)",
        "Example": {"Date": "2023-08-15", "Value": 175}
      },
      {
        "Field": "Body Temperature",
        "Description": "Body temperature (°C)",
        "ValueType": "Numeric (°C)",
        "Example": {"Date": "2024-01-20", "Value": 37.1}
      },
      {
        "Field": "Blood Pressure",
        "Description": "Blood pressure (mmHg)",
        "ValueType": "Text",
        "Example": {"Date": "2024-01-30", "Value": "120/80"}
      },
      {
        "Field": "Heart Rate",
        "Description": "Heart rate (bpm)",
        "ValueType": "Numeric (bpm)",
        "Example": {"Date": "2024-02-10", "Value": 72}
      },
      {
        "Field": "Respiratory Rate",
        "Description": "Respiratory rate (rpm)",
        "ValueType": "Numeric (rpm)",
        "Example": {"Date": "2024-01-25", "Value": 16}
      },
      {
        "Field": "Oxygen Saturation",
        "Description": "Oxygen saturation (%)",
        "ValueType": "Numeric (%)",
        "Example": {"Date": "2024-01-18", "Value": 98}
      }
    ]
  },
  "diagnostics": {
    "version": "1.0",
    "fields": [
      {
        "Field": "Lab Results",
        "Description": "Recent laboratory test outcomes",
        "ValueType": "List",
        "Example": [
          {"Test": "Complete Blood Count", "Date": "2024-02-12", "Result": "Normal"}
        ]
      },
      {
        "Field": "Imaging Studies",
        "Description": "Recent imaging (X-ray, MRI, CT, Ultrasound) reports",
        "ValueType": "List",
        "Example": [
          {"Type": "Chest X-ray", "Date": "2023-12-20", "Result": "Clear lungs"}
        ]
      },
      {
        "Field": "Screening Tests",
        "Description": "Preventive screening results (e.g., colonoscopy, mammogram)",
        "ValueType": "List",
        "Example": [
          {"Test": "Colonoscopy", "Date": "2023-03-10", "Result": "Normal"}
        ]
      },
      {
        "Field": "Serology",
        "Description": "Serological test outcomes (e.g., HIV, Hepatitis)",
        "ValueType": "List",
        "Example": [
          {"Test": "HIV", "Date": "2022-06-30", "Result": "Negative"}
        ]
      }
    ]
  },
  "preventive_care": {
    "version": "1.0",
    "fields": [
      {
        "Field": "Vaccinations",
        "Description": "Vaccination history with dates",
        "ValueType": "List",
        "Example": [
          {"Vaccine": "COVID-19", "Date": "2023-03-15"},
          {"Vaccine": "Influenza", "Date": "2023-10-01"},
          {"Vaccine": "Hepatitis B", "Date": "2022-09-05"}
        ]
      }
    ]
  },
  "treatment_and_followup": {
    "version": "1.0",
    "fields": [
      {
        "Field": "Recent Prescriptions",
        "Description": "Details of recently prescribed medications",
        "ValueType": "List",
        "Example": [
          {
            "Medication": "Paracetamol",
            "Dosage": "1g",
            "Frequency": "q8h",
            "Date": "2024-02-10"
          }
        ]
      },
      {
        "Field": "Lab/Radiology Orders",
        "Description": "Pending or recently ordered lab tests and imaging",
        "ValueType": "List",
        "Example": [
          {"Order": "Chest X-ray", "Date": "2024-01-25"},
          {"Order": "CBC", "Date": "2024-02-12"}
        ]
      },
      {
        "Field": "Specialist Referrals",
        "Description": "Referrals to specialists with reasons",
        "ValueType": "List",
        "Example": [
          {"Specialty": "Cardiology", "Date": "2024-02-05", "Reason": "Hypertension evaluation"}
        ]
      },
      {
        "Field": "Next Appointment",
        "Description": "Scheduled next consultation date",
        "ValueType": "Date",
        "Example": "2024-03-15"
      }
    ]
  }
}
